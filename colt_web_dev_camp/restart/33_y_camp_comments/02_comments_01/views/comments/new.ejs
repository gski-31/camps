<% include ../partials/header %>
<div class="container">
        <h4>Add a comment for <%= campground.name %></h4>
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <label for="comment">Comment:</label>
                <textarea class="form-control" id="comment" name="comment[content]" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label for="author">Author:</label>
                <input type="text" class="form-control" id="author" name="comment[author]" placeholder="Enter your name">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
</div>
<% include ../partials/footer %>