<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>
                Welcome to Happy Campers
            </h1>
            <p>View reviews on campgrounds</p>
            <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campground</a></p>
        </div>
    </header>

    <div class="row">

        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <figure class="figure">
                <img src="<%= campground.image %>" class="figure-img img-fluid rounded" alt="Camp Site Image">
                <figcaption class="figure-caption">
                    <%= campground.name %>
                </figcaption>
            </figure>
        </div>
        <% }); %>

    </div>

    <p><br />&nbsp;<br /></p>
    <a href="/">Return to the homepage</a>
</div>
<% include partials/footer %>